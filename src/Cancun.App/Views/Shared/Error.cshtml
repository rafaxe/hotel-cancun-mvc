@model Cancun.App.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@{
    if (Model == null)
    {
        <div>
            <h2>
                Ooops! An error has occurred, but don't worry. Our team will be notified and we will fix it soon!
            </h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
